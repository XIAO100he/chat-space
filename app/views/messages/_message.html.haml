.message
  .top-wrapper
    .top-wrapper__user-name
      = message.user.name
    .top-wrapper__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")

  .bottom-wrapper
    -if message.content.present?
      %p.bottom-wrapper__content
        = message.content
    =image_tag message.image.url, class: 'bottom-wrapper__image' if message.image.present?
  